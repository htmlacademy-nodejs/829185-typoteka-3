doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    meta(name='description', content='Личный блог Типотека')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Типотека
    link(rel='preload', href='/fonts/Inter-Regular.woff2', as='font', crossorigin='anonymous')
    link(rel='preload', href='/fonts/Inter-Medium.woff2', as='font', crossorigin='anonymous')
    link(rel='preload', href='/fonts/SFProDisplay-Regular.woff2', as='font', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/style.min.css')
    style.
      .server-error {
        border-radius: 10px;
        color: white;
        background-color: tomato;
        margin: 20px 0;
        padding: 10px;
      }
  body
    mixin errorMessage(message)
      if message
        .server-error= message
    .wrapper.wrapper--nobackground
      include fragments/admin-header.pug
      block content
      include fragments/footer.pug
    script(src='/js/vendor.js')
    script(src='/js/main.js')
